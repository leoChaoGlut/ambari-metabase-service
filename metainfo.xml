<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>METABASE</name>
            <displayName>Metabase</displayName>
            <comment>environment-variables:
                https://www.metabase.com/docs/latest/operations-guide/environment-variables.html
            </comment>
            <version>0.36.4</version>
            <components>
                <component>
                    <name>METABASE</name>
                    <displayName>Metabase</displayName>
                    <category>MASTER</category>
                    <cardinality>1+</cardinality>
                    <versionAdvertised>true</versionAdvertised>
                    <commandScript>
                        <script>scripts/metabase.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>300</timeout>
                    </commandScript>
                </component>

            </components>

            <configuration-dependencies>
                <config-type>metabase..xml</config-type>
            </configuration-dependencies>

        </service>
    </services>
</metainfo>
